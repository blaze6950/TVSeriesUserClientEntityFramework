<UserControl x:Class="TVSeriesUserClientEntityFramework.RatingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSeriesUserClientEntityFramework"
             mc:Ignorable="d" Height="72" Width="120">
    <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1">
        <StackPanel>
            <Grid Name="gdRating" Margin="10" MouseLeave="gdRating_MouseLeave">
                <WrapPanel Name="pnlMinus">
                </WrapPanel>
                <WrapPanel Name="pnlPlus">
                </WrapPanel>
            </Grid>
            <Separator Margin="0,10,0,10"></Separator>
            <WrapPanel Margin="5,0,5,5">
                <TextBlock Name="lblCaption" FontSize="18" Text="Your Rating - " />
                <TextBlock Name="lblRating" FontSize="18" Text="" />
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>
